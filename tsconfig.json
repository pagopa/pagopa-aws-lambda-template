{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["**/src/**/*.ts"],
  "exclude": ["**/node_modules", "**/src/__tests__/*"]
}
